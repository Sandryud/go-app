# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database Configuration
# Для локальной разработки используйте localhost
# Для Docker используйте имя сервиса postgres
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=workout_app
DB_SSLMODE=disable

# Database Connection Pool Settings (опционально)
# Если не указаны, используются значения по умолчанию
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=10m

# Application Environment
APP_ENV=development
